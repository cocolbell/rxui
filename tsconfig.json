{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "lib": [
      "dom",
      "es2016",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "rxui": [
        "src/index"
      ],
      "rxui/dom": [
        "src/dom"
      ],
      "rxui/model": [
        "src/model"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ]
}
